% Creates section slide
% 1st parameter = section title, 2nd parameter = subheading
\newcommand{\sectionslide}[2]{
 \setbeamercolor{background canvas}{bg = EAPgreen}
 	\section{#1}
	\begin{frame}[plain]
	\Large\color{white}\textbf{#1}

        \normalsize\color{white}{#2}
	\end{frame}
	\setbeamercolor{background canvas}{bg = white}
}

% Same thing as \sectionslide but without making a section
% => (No Table of Contents Entry)
\newcommand{\transitionslide}[2]{
 \setbeamercolor{background canvas}{bg = EAPgreen}
	\begin{frame}[plain]
	\Large\color{white}\textbf{#1}
	
        \normalsize\color{white}{#2}
	\end{frame}
	\setbeamercolor{background canvas}{bg = white}
}

