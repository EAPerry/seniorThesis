% Creates section slide
% 1st parameter = section title, 2nd parameter = subheading
\newcommand{\sectionslide}[2]{
 \setbeamercolor{background canvas}{bg = gold}
 	\section{#1}
	\begin{frame}[plain]
	\Large\color{white}\textbf{#1}

        \normalsize\color{white}{#2}
	\end{frame}
	\setbeamercolor{background canvas}{bg = white}
}

% Same thing as \sectionslide but without making a section
% => (No Table of Contents Entry)
\newcommand{\transitionslide}[2]{
 \setbeamercolor{background canvas}{bg = gold}
	\begin{frame}[plain]
	\Large\color{white}\textbf{#1}
	
        \normalsize\color{white}{#2}
	\end{frame}
	\setbeamercolor{background canvas}{bg = white}
}

\newcommand{\sectiontocslide}[1]
{
	\section{#1}
	
	 \setbeamercolor*{background canvas}{fg=gold, bg=white}
    \begin{frame}
    \bf
        \tableofcontents[hideallsubsections, currentsection]
    \end{frame}
    \setbeamercolor{background canvas}{fg=black,bg=white}        	% Reset colors
}



